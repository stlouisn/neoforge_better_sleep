{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${mod_version}",

  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": [
    "${author}"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/${archives_base_name}",
    "sources": "https://gitlab.com/${author}/${mod_id}",
    "issues": "https://gitlab.com/${author}/${mod_id}/-/issues"
  },

  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/xABmPngXAH"
      }
    }
  },

  "license": "MIT",
  "icon": "assets/${mod_id}/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "${maven_group}.${mod_id}.Init"
    ],
    "client": [
      "${maven_group}.${mod_id}.ClientInit"
    ],
    "modmenu": [
      "${maven_group}.${mod_id}.ModMenuIntegration"
    ]
  },
  "mixins": [
    "${mod_id}.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=${min_fabricloader_version}",
    "fabric": ">=${min_fabric_version}",
    "minecraft": ">=${min_minecraft_version} <=${minecraft_version}"
  },
  "suggests": {
    "modmenu": ">=${modmenu_version}",
    "cloth-config2": ">=${cloth_config_version}"
  }
}
